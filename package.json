{
  "name": "levelup-journal",
  "version": "1.0.0",
  "description": "A personal growth platform for structured learning through guided journeys",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "build": "cd frontend && npm run build",
    "prod:setup": "npm run install:all && npm run build",
    "prod:start": "pm2 start ecosystem.config.js",
    "prod:stop": "pm2 stop levelup-journal-app levelup-journal-tunnel",
    "prod:restart": "pm2 restart levelup-journal-app levelup-journal-tunnel",
    "prod:logs": "pm2 logs",
    "prod:status": "pm2 status",
    "capture-screenshots": "node capture-screenshots.js"
  },
  "keywords": ["personal growth", "journal", "learning", "self-improvement", "journeys"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2"
  }
}
